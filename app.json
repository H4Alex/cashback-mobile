{
  "expo": {
    "name": "cashback-mobile",
    "slug": "cashback-mobile",
    "owner": "alexh4",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "h4cashback",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#16a34a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.h4alex.cashback",
      "infoPlist": {
        "NSCameraUsageDescription": "Necess√°rio para escanear QR Codes de cashback.",
        "NSFaceIDUsageDescription": "Usar biometria para login seguro.",
        "CFBundleAllowMixedLocalizations": true
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#16a34a"
      },
      "package": "com.h4alex.cashback",
      "permissions": ["CAMERA", "VIBRATE", "RECEIVE_BOOT_COMPLETED"]
    },
    "locales": {
      "pt": "./store-metadata/pt-BR.json",
      "en": "./store-metadata/en.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-updates",
      "expo-font",
      "@sentry/react-native/expo",
      "@sentry/react-native"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "89aa8fa1-4ffa-4d64-aa1b-eb399aa3e07b"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/89aa8fa1-4ffa-4d64-aa1b-eb399aa3e07b"
    }
  }
}
