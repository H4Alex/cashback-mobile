{
  "name": "cashback-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo Cashback â€” @cashback/shared + mobile app",
  "workspaces": [
    "packages/shared",
    "packages/mobile"
  ],
  "scripts": {
    "mobile:start": "npm run start --workspace=packages/mobile",
    "mobile:android": "npm run android --workspace=packages/mobile",
    "mobile:ios": "npm run ios --workspace=packages/mobile",
    "mobile:test": "npm run test:run --workspace=packages/mobile",
    "mobile:lint": "npm run lint --workspace=packages/mobile",
    "mobile:type-check": "npm run type-check --workspace=packages/mobile",
    "shared:build": "npm run build --workspace=packages/shared",
    "shared:type-check": "npm run type-check --workspace=packages/shared",
    "test": "npm run test:run --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\""
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
